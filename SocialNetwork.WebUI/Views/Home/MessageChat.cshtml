@model SocialNetwork.WebUI.Models.ChatModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="width:50%;margin:auto;" >
    <div style="display:flex;flex-direction:row" class="sender col-md-4">
        <img style="width:50px;height:50px;border-radius:50%;" src="~/images/@Model.SenderUser.ImageUrl"/>
        <h2>Sender @Model.SenderUser.UserName</h2>
    </div>
    <div style="display:flex;flex-direction:row" class="sender col-md-4">
        <img style="width:50px;height:50px;border-radius:50%;" src="~/images/@Model.ReceiverUser.ImageUrl"/>
        <h2>Receiver @Model.ReceiverUser.UserName</h2>
    </div>
</div>